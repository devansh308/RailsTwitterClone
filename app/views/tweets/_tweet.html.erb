<div id="<%= dom_id tweet %>">
  <div class="container border border-primary rounded p-3">
    <%= link_to '/p/' + tweet.user_id.to_s, style:"color: inherit; text-decoration: inherit;" do %>
      <strong>
        <%= tweet.name %>
      </strong><br>
      @<%= tweet.username %>
    <% end %>
    <p class="mt-2">
      <%= tweet.body %>
    </p>
  </div>
</div>
